{
  "expo": {
    "name": "ArtCollect",
    "slug": "artcollect",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "artcollect",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow ArtCollect to use the camera to photograph artworks and labels."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow ArtCollect to access your photos to add artwork images."
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Allow ArtCollect to save photos to your library."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
